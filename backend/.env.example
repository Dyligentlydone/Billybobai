# Server
PORT=3000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/twilio-automation-hub

# JWT
JWT_SECRET=your-jwt-secret
JWT_EXPIRY=24h

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here
TWILIO_MESSAGING_SERVICE_SID=your_messaging_service_sid_here

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key

# Zendesk Configuration (Optional)
ZENDESK_SUBDOMAIN=your_subdomain_here
ZENDESK_API_TOKEN=your_api_token_here
ZENDESK_EMAIL=your_email_here

# Encryption
ENCRYPTION_KEY=your-32-char-encryption-key

# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py
SECRET_KEY=your_secret_key_here

# Database Configuration (for future use)
DATABASE_URL=sqlite:///app.db
